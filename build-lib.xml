<?xml version="1.0" encoding="UTF-8"?>
<!--
	Ant build script for the j2d library
-->
<project default="com">
	<property name="bin.dir" value="D:/Development/Java/lib/npw/" />
	
	<property name="j2d-version" value="1.0.0" />
	
	<!-- compile all files into classes -->
	<target name="compile">
		<javac includeantruntime="false" srcdir="./src/com/nullpointerworks/" destdir="bin/" />
		<javac includeantruntime="false" srcdir="./src/exp/nullpointerworks/" destdir="bin/" />
	</target>
			
	<!-- jar makers -->
	<target name="com" depends="compile">
		<jar destfile="${bin.dir}/libnpw-j2d-${j2d-version}.jar">
	        <fileset dir="bin/" includes="module-info.class" />
	        <fileset dir="src/" includes="module-info.java" />
	        <fileset dir="bin/" includes="com/nullpointerworks/j2d/**/*.class" />
	        <fileset dir="bin/" includes="exp/nullpointerworks/j2d/**/*.class" />
	        <fileset dir="src/" includes="com/nullpointerworks/j2d/**/*.java" />
	        <fileset dir="src/" includes="exp/nullpointerworks/j2d/**/*.java" />
	    </jar>
	</target>
	
</project>